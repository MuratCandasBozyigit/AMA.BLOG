@using System.Security.Claims
@{
    ViewData["Title"] = "Admin Kategori Yönetimi";
}

<h2>Kategoriler</h2>

<!-- Modal for Adding and Editing Categories -->
<div class="modal fade" id="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"></h5>
                <button type="button" class="btn-close emptyValue" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <input type="hidden" id="categoryId" />
            <div class="modal-body">
                <!-- Category Name -->
                <div class="mb-3 row">
                    <label for="name" class="form-label">Kategori Adı:</label>
                    <input type="text" id="name" placeholder="Lütfen Kategori Adı giriniz" class="form-control" required />
                    <span id="name-error" class="text-danger" style="display:none;">Alan boş bırakılamaz.</span>
                </div>

                <!-- Category Description -->
                <div class="mb-3 row">
                    <label for="description" class="form-label">Açıklama:</label>
                    <textarea id="description" placeholder="Lütfen Açıklama giriniz" class="form-control" required></textarea>
                    <span id="description-error" class="text-danger" style="display:none;">Alan boş bırakılamaz.</span>
                </div>

                <!-- Category Slug -->
                <div class="mb-3 row">
                    <label for="slug" class="form-label">Slug:</label>
                    <input type="text" id="slug" placeholder="Lütfen Slug giriniz" class="form-control" required />
                    <span id="slug-error" class="text-danger" style="display:none;">Alan boş bırakılamaz.</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary emptyValue" data-bs-dismiss="modal">Kapat</button>
                <button type="button" id="btnSave" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Categories Management Table -->
<div class="card bg-dark text-white">
    <div class="card-header bg-dark text-white">
        <div class="row">
            <div class="col-11">
                <box-icon name="category" color="white" size="sm" animation="tada"></box-icon> Kategorilerim
            </div>
            <div class="col-1 text-end">
                <a id="btnAdd" href="#" class="btn btn-outline-light">+ Yeni Kategori Ekle</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="tblCategories" class="table table-hover table-striped table-bordered"></table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize and reset form values
            function resetForm() {
                $("#categoryId").val("");
                $("#name, #description, #slug").val("");
                $(".text-danger").hide();
            }

            // Initialize DataTable for categories
            var table = $('#tblCategories').DataTable({
                ajax: {
                    url: '/Admin/Category/GetAllCategories',
                    dataSrc: '',
                    error: function (xhr, error, thrown) {
                        console.error('Ajax Error:', error, thrown);
                        Swal.fire('Hata', 'Kategoriler yüklenirken bir sorun oluştu.', 'error');
                    }
                },
                columns: [
                    { data: 'name', title: 'Kategori Adı' },
                    { data: 'description', title: 'Açıklama' },
                    { data: 'slug', title: 'Slug' },
                    {
                        data: null,
                        title: 'İşlemler',
                        render: function (data, type, row) {
                            return `

                                        <a href="#" class="btn btn-sm btn-warning editCategory" data-id="${row.id}">Düzenle</a>
                                        <a href="#" class="btn btn-sm btn-danger deleteCategory" data-id="${row.id}">Sil</a>`;
                        }
                    }
                ]
            });

            // Open the modal for adding a new category
            $('#btnAdd').click(function () {
                $('#modalTitle').text('Yeni Kategori Ekle');
                $('#btnSave').text('Ekle');
                resetForm();
                $('#modal').modal('show');
            });

            // Edit Category
            $('#tblCategories').on('click', '.editCategory', function () {
                var id = $(this).data('id');
                $.ajax({
                    url: "/Admin/Category/GetById/" + id,
                    success: function (res) {
                        $('#name').val(res.name);
                        $('#description').val(res.description);
                        $('#slug').val(res.slug);
                        $('#categoryId').val(res.id);
                    },
                    error: function () {
                        Swal.fire('Hata', 'Kategori verisi yüklenirken bir sorun oluştu.', 'error');
                    }
                });
                $('#modalTitle').text('Kategori Düzenle');
                $('#btnSave').text('Güncelle');
                $('#modal').modal('show');
            });

            // Delete Category
            $('#tblCategories').on('click', '.deleteCategory', function () {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu kategori kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "DELETE",
                            url: "/Admin/Category/Delete/" + id,
                            success: function () {
                                table.ajax.reload();
                                Swal.fire('Silindi!', 'Kategori başarıyla silindi.', 'success');
                            },
                            error: function () {
                                Swal.fire('Hata', 'Kategori silinirken bir sorun oluştu.', 'error');
                            }
                        });
                    }
                });
            });

            // Save Category (Add or Update)
            $('#btnSave').click(function () {
                var category = {
                    id: $('#categoryId').val() === '' ? 0 : $('#categoryId').val(),
                    name: $('#name').val(),
                    description: $('#description').val(),
                    slug: $('#slug').val()
                };

                let isValid = true;
              
                // Validate form
                if (!category.name) {
                    $('#name-error').show();
                    isValid = false;
                } else {
                    $('#name-error').hide();
                }

                if (!category.description) {
                    $('#description-error').show();
                    isValid = false;
                } else {
                    $('#description-error').hide();

                                                        <a href="#" class="btn btn-sm btn-warning editTitle" data-id="${row.id}">Düzenle</a>
                                                        <a href="#" class="btn btn-sm btn-danger deleteTitle" data-id="${row.id}">Sil</a>
                                                    `;
                        }
                    }
                ]
            })
        });

        // Yeni kategori ekleme butonuna tıklama olayı
        $('#btnAdd').click(function () {
            $('#modalTitle').text('Yeni Kategori Ekle');
            $('#btnSave').text('Ekle');
            $('#name').val('');
            $('#description').val('');
            $('#slug').val('');
            $('#modal').modal('show');
        });

        // Kategori düzenleme butonuna tıklama olayı
        $('#tblCategories').on('click', '.editTitle', function () {
            var id = $(this).data('id');
            $.ajax({
                url: "/Admin/Category/GetById/" + id, // Route düzeltildi
                success: function (res) {
                    $('#name').val(res.name);
                    $('#slug').val(res.slug);
                    $('#description').val(res.description);
                    $('#modalTitle').text('Kategori Düzenle');
                    $('#btnSave').text('Güncelle');
                    $('#modal').modal('show');
                },
                error: function () {
                    Swal.fire('Hata', 'Kategori verisi yüklenirken bir sorun oluştu.', 'error');

                }
            });
        });

            });
        });

                });
    </script>
}
