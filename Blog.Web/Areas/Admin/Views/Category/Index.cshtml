@using System.Security.Claims
@{
    ViewData["Title"] = "Admin Kategori Ekleme";
}

<h2>Kategori</h2>

<div class="col-12">
    <div class="modal fade" id="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle"></h5>
                    <button type="button" class="btn-close emptyValue" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 row">
                        <label class="form-label">Kategori Adı: </label>
                        <input type="text" id="name" placeholder="Lütfen Kategori Adı giriniz" class="form-control" required />
                        <span id="name-error" style="color:red; display:none;">Alan boş bırakılamaz.</span>
                    </div>
                    <div class="mb-3 row">
                        <label class="form-label">Slug: </label>
                        <input type="text" id="slug" placeholder="Lütfen Slug giriniz" class="form-control" required />
                        <span id="slug-error" style="color:red; display:none;">Alan boş bırakılamaz.</span>

                    </div>
                    <div class="mb-3 row">
                        <label class="form-label">Kategori Açıklaması: </label>
                        <input type="text" id="description" placeholder="Lütfen Kategori Açıklaması giriniz" class="form-control" required />
                        <span id="description-error" style="color:red; display:none;">Alan boş bırakılamaz.</span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary emptyValue" data-bs-dismiss="modal">Kapat</button>
                        <button type="button" id="btnSave" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card bg-dark text-white">
        <div class="card-header bg-dark text-white">
            <div class="row">
                <div class="col-11">
                    <box-icon name="car" color="white" size="sm" animation="tada"></box-icon> Kategorilerim
                </div>
                <div class="col-1 text-end">
                    <a id="btnAdd" href="#" class="btn btn-outline-light">+ Yeni Kategori</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table id="tblCategories" class="table table-hover table-striped table-bordered"></table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Form alanlarını başlangıçta temizle ve hata mesajlarını gizle
            $("input,textarea").val("");
            $(".error-message").hide();

            // DataTables yapılandırması
            var table = $('#tblCategories').DataTable({
                ajax: {
                    url: '/Admin/Category/GetAllCategories', // Route düzeltildi
                    dataSrc: '',
                    error: function (xhr, error, thrown) {
                        console.error('Ajax Error:', error, thrown);
                        Swal.fire('Hata', 'Kategoriler yüklenirken bir sorun oluştu.', 'error');
                    }
                },
                columns: [
                    { data: 'name', title: 'Kategori Adı' },
                    { data: 'slug', title: 'Slug ' },
                    { data: 'description', title: 'Kategori Açıklaması' },
                    {
                        data: null,
                        title: 'İşlemler',
                        render: function (data, type, row) {
                            return `
                                                <a href="#" class="btn btn-sm btn-warning editTitle" data-id="${row.id}">Düzenle</a>
                                                <a href="#" class="btn btn-sm btn-danger deleteTitle" data-id="${row.id}">Sil</a>
                                            `;
                        }
                    }
                ]
            });

            // Yeni kategori ekleme butonuna tıklama olayı
            $('#btnAdd').click(function () {
                $('#modalTitle').text('Yeni Kategori Ekle');
                $('#btnSave').text('Ekle');
                $('#name').val('');
                $('#description').val('');
                $('#slug').val('');
                $('#modal').modal('show');
            });

            //Update yap
            // Kategori düzenleme butonuna tıklama olayı
            $('#tblCategories').on('click', '.editTitle', function () {
                var id = $(this).data('id');
                $.ajax({
                    url: "/Admin/Category/GetById/"+id, // Route düzeltildi
                    success: function (res) {
                        $('#name').val(res.name);
                        $('#slug').val(res.slug);
                        $('#description').val(res.description);
                        $('#modalTitle').text('Kategori Düzenle');
                        $('#btnSave').text('Güncelle');
                        $('#modal').modal('show');
                    },
                    error: function () {
                        Swal.fire('Hata', 'Kategori verisi yüklenirken bir sorun oluştu.', 'error');
                    }
                });
            });

            // Kategori silme butonuna tıklama olayı
            $('#tblCategories').on('click', '.deleteTitle', function () {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu kategori kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "DELETE",
                            url: "/Admin/Category/Delete/" + id, // Route düzeltildi
                            success: function () {
                                table.ajax.reload();
                                Swal.fire('Silindi!', 'Kategori başarıyla silindi.', 'success');
                            },
                            error: function () {
                                Swal.fire('Hata', 'Kategori silinirken bir sorun oluştu.', 'error');
                            }
                        });
                    }
                });
            });
            $('#btnSave').click(function () {
                var category = {
                    id: $('#category-id').val(), // ID'yi de gönder
                    name: $('#name').val(),
                    slug: $('#slug').val(),
                    description: $('#description').val()
                };

                let isValid = true;

                // Kategori adı doğrulaması
                if (!category.name) {
                    $('#name-error').show();
                    isValid = false;
                } else {
                    $('#name-error').hide();
                }

                // Slug Name Doğrulaması
                if (!category.slug) {
                    $('#slug-error').show();
                    isValid = false;
                } else {
                    $('#slug-error').hide();
                }

                // Kategori açıklaması doğrulaması
                if (!category.description) {
                    $('#description-error').show();
                    isValid = false;
                } else {
                    $('#description-error').hide();
                }

                // Form geçerli değilse kaydetme
                if (!isValid) {
                    return;
                }
                var url = $('#btnSave').text().toUpperCase() === 'Ekle' ? '/Admin/Category/Add' : '/Admin/Category/Update';
                var method = $('#btnSave').text().toUpperCase() === 'Ekle' ? 'POST' : 'PUT';

                $.ajax({
                    type: method,
                    url: url,
                    data: JSON.stringify(category),
                    contentType: 'application/json; charset=utf-8',
                    success: function (response) {
                        $('#modal').modal('hide');
                        table.ajax.reload();
                        Swal.fire('Başarılı!', 'Kategori başarıyla kaydedildi.', 'success');
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        Swal.fire('Hata', 'Kategori kaydedilirken bir sorun oluştu. Detaylar: ' + errorThrown, 'error');
                    }
                });
            });

        });
    </script>
}
