@model Blog.Web.Areas.Admin.Controllers.PostController.HomeViewModel

<h2>Posts</h2>

<a href="Post/Create" class="btn btn-primary">Yeni Post Oluştur</a>

<div class="post-list">
    @foreach (var post in Model.Posts)
    {
        <div class="post-item">
            <div class="post-content">
                <h3>@post.Title</h3>
                <p class="post-summary"><strong>Özet:</strong> @post.Summary</p>
                <p><strong>Kategori:</strong> @post.Category.Name</p>
                <div class="post-actions">
                    <a href="Edit/@post.Id" class="btn btn-secondary">Düzenle</a>
                    <a href="#" class="btn btn-danger deletePost" data-id="@post.Id">Sil</a>
                </div>
            </div>
            <div class="post-image">
                <img src="@post.ImagePath" alt="@post.Title" class="post-img" />
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.deletePost').on('click', function () {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: 'Bu post kalıcı olarak silinecektir!!!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: 'DELETE', // Burayı 'POST' yerine 'DELETE' yapmalısınız
                            url: '/Admin/Post/Delete/' + id,
                            success: function () {
                                location.reload(); // Sayfayı yenile
                                Swal.fire('Silindi!', 'Post başarıyla silindi', 'success');
                            },
                            error: function () {
                                Swal.fire('Hata', 'Post silinirken bir sorun oluştu', 'error');
                            }
                        });
                    }
                });
            });
        });
    </script>
}

@section Css {
    <link rel="stylesheet" href="~/css/postIndexAdminPage.css" asp-append-version="true" />
}




