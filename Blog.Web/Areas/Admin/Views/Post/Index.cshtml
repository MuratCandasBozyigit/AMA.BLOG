@section Scripts {
    <script>
        $(document).ready(function () {
            $("input,textarea").val("");
            $(".error-message").hide();

            var table = $('#tblPosts').DataTable({
                ajax: {
                    url: '/Admin/Post/Add',
                    dataSrc: ''
                },
                columns: [
                    { data: 'title', title: 'Başlık' },
                    { data: 'content', title: 'İçerik' },
                    {
                        data: null, title: 'İşlemler', render: function (data, type, row) {
                            return `
                            <a href="#" class="btn btn-sm btn-warning editTitle" data-id="${row.id}">Düzenle</a>
                            <a href="#" class="btn btn-sm btn-danger deleteTitle" data-id="${row.id}">Sil</a>
                        `;
                        }
                    }
                ]
            });


            $('#btnAdd').click(function () {
                $('#modalTitle').text('Yeni Başlık Ekle');
                $('#btnSave').text('Ekle');
                $('#modal').modal('show');
            });

            $('#tblPosts').on('click', '.editTitle', function () {
                var id = $(this).data('id');
                $.ajax({
                    url: "/Admin/Post/Details/" + id,
                    type: 'GET',
                    success: function (res) {
                        $('#title').val(res.title);
                        $('#content').val(res.content);

                        $('#modalTitle').text('Başlık Düzenle');
                        $('#btnSave').text('Güncelle');
                        $('#modal').modal('show');
                    },
                    error: function () {
                        Swal.fire('Hata', 'Başlık verisi yüklenirken bir sorun oluştu.', 'error');
                    }
                });
            });

            $('#tblPosts').on('click', '.deleteTitle', function () {
                var id = $(this).data('id');
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: "Bu başlık kalıcı olarak silinecek!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Evet, sil!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            type: "POST",
                            url: "/Admin/Post/Delete/" + id,
                            success: function () {
                                table.ajax.reload();
                                Swal.fire('Silindi!', 'Başlık başarıyla silindi.', 'success');
                            },
                            error: function () {
                                Swal.fire('Hata', 'Başlık silinirken bir sorun oluştu.', 'error');
                            }
                        });
                    }
                });
            });

            $('#btnSave').click(function () {
                var post = {
                    title: $('#title').val(),
                    content: $('#content').val()
                };

                let isValid = true;
                if (!post.title) {
                    $('#title-error').show();
                    isValid = false;
                } else {
                    $('#title-error').hide();
                }
                if (!post.content) {
                    $('#content-error').show();
                    isValid = false;
                } else {
                    $('#content-error').hide();
                }

                if (!isValid) {
                    return;
                }

                var url = $('#btnSave').text() === 'Ekle' ? '/Admin/Post/Add' : '/Admin/Post/Update';
                var method = $('#btnSave').text() === 'Ekle' ? 'POST' : 'PUT';

                $.ajax({
                    type: method,
                    url: url,
                    data: JSON.stringify(post),
                    contentType: 'application/json; charset=utf-8',
                    success: function () {
                        $('#modal').modal('hide');
                        table.ajax.reload();
                        Swal.fire('Başarılı!', 'Post başarıyla kaydedildi.', 'success');
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        Swal.fire('Hata', 'Post kaydedilirken bir sorun oluştu. Detaylar: ' + errorThrown, 'error');
                    }
                });
            });
        });
    </script>
}




















