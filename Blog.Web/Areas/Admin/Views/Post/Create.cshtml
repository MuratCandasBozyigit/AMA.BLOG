@model Blog.Web.Areas.Admin.Controllers.PostController.HomeViewModel

<h2>Yeni Post Oluştur</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="Title" class="form-label">Başlık</label>
        <input type="text" class="form-control" id="title" name="Title" value="@Model?.Posts?.FirstOrDefault()?.Title" required />
        <span id="title-error" style="color:red; display:none;">Alan boş bırakılamaz.</span>
    </div>

    <div class="mb-3">
        <label for="Content" class="form-label">İçerik</label>
        <textarea class="form-control" id="content" name="Content" rows="3" required>@Model?.Posts?.FirstOrDefault()?.Content</textarea>
        <span id="content-error" style="color:red; display:none;">Alan boş bırakılamaz.</span>
    </div>

    <div class="mb-3">
        <label for="Summary" class="form-label">Kısa İçerik</label>
        <textarea class="form-control" id="summary" name="Summary" rows="3" required>@Model?.Posts?.FirstOrDefault()?.Summary</textarea>
        <span id="summary-error" style="color:red; display:none;">Alan boş bırakılamaz.</span>
    </div>

    <div class="mb-3">
        <label for="CategorySelect" class="form-label">Kategori Seç</label>
        <select class="form-control" id="CategorySelect" name="CategoryId" required>
            <option value="">Kategori Seçin</option>
            @if (Model?.Categories != null && Model.Categories.Any())
            {
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
            else
            {
                <option value="">Kategoriler yüklenemedi.</option>
            }
        </select>
        <span id="CategorySelect-error" style="color:red; display:none;">Kategori seçilmelidir.</span>
    </div>

    <div class="mb-3">
        <label for="Image" class="form-label">Resim</label>
        <input type="file" class="form-control" id="image" name="Image" />
        <span id="image-error" style="color:red; display:none;">Alan boş bırakılamaz.</span>
    </div>

    <button type="submit" id="btnSave" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#btnSave').click(function (event) {
                event.preventDefault(); // Formun varsayılan gönderimini engelle

                var post = {
                    title: $('#title').val(),
                    content: $('#content').val(),
                    summary: $('#summary').val(),
                    categorySelect: $('#categorySelect').val(),
                    categorySelect:$('#categorySelect'),
                    image: $('#image')[0].files[0]
                };

                let isValid = true;

                // Başlık doğrulaması
                if (!post.title) {
                    $('#title-error').show();
                    isValid = false;
                } else {
                    $('#title-error').hide();
                }
                
                // Kısa içerik doğrulaması
                if (!post.summary) {
                    $('#summary-error').show();
                    isValid = false;
                } else {
                    $('#summary-error').hide();
                }

                // Kısa içerik doğrulaması
                if (!post.summary) {
                    $('#CategorySelect-error').show();
                    isValid = false;
                } else {
                    $('#CategorySelect-error').hide();
                }

                // İçerik doğrulaması
                if (!post.content) {
                    $('#content-error').show();
                    isValid = false;
                } else {
                    $('#content-error').hide();
                }

                // Resim doğrulaması
                if (!post.image) {
                    $('#image-error').show();
                    isValid = false;
                } else {
                    $('#image-error').hide();
                }

                // Form geçerli değilse işlemi durdur
                if (!isValid) {
                    return;
                }

                // AJAX ile form verilerini gönder
                var formData = new FormData();
                formData.append('Title', post.title);
                formData.append('Content', post.content);
                formData.append('Summary', post.summary);
                formData.append('CategorySelect', post.categorySelect);
                formData.append('Image', post.image);

                $.ajax({
                    type: 'POST',
                    url: '/Admin/Post/Create',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        Swal.fire('Başarılı!', 'Post başarıyla kaydedildi.', 'success');
                        // Burada yönlendirme yapılabilir
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        Swal.fire('Hata', 'Post kaydedilirken bir sorun oluştu: ' + errorThrown, 'error');
                    }
                });
            });
        });
    </script>
}
