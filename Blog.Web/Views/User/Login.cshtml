@model Blog.Dtos.UserDTOs.LoginDTO
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login Page</title>

    <link rel="stylesheet" href="~/css/loginPage.css" />
</head>
<body>
    <div class="main">
        <section class="login-section">
            <div class="container">
                <div class="login-content">
                    <h2 class="form-title">Üye Giriş Paneli</h2>
                    <form method="POST" action="Login" class="login-form">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input asp-for="Email" type="email" id="email" placeholder="Email Giriniz" />
                        </div>
                        <div class="form-group">
                            <label for="password">Şifre</label>
                            <input asp-for="Password" type="password" id="password" placeholder="Şifre Giriniz" />
                        </div>
                        <div class="form-group remember-me">
                            <input asp-for="IsRememberMe" type="checkbox" id="remember-me" />
                            <label for="remember-me">Beni Hatırla</label>
                        </div>
                        <div class="form-group form-button">
                            <input type="submit" id="btnSave" class="form-submit" value="Giriş Yap" />
                        </div>
                    </form>

                    <!-- Home ve Register Butonları -->
                    <a href="/Home/Index" class="secondary-btn">Home</a>
                    <a href="/User/Register" class="secondary-btn">Register</a>

                    <!-- Gece Modu Butonu -->
                    <button id="night-mode-toggle" class="night-mode-button">Night Mode</button>
                </div>
            </div>
        </section>
    </div>

    <script>
        // Gece teması geçişi
        document.getElementById('night-mode-toggle').addEventListener('click', function () {
            document.body.classList.toggle('night-mode');
        });

        // Input alanına tıklanınca arka plan renk geçişi
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('focus', function () {
                // Renklerin sırası değişiyor
                document.body.style.backgroundImage = 'linear-gradient(135deg, #c19a6b 25%, transparent 25%, transparent 50%, #c19a6b 50%, #9370DB 75%, transparent 75%, transparent), linear-gradient(135deg, #89c2d9 25%, transparent 25%, transparent 50%, #89c2d9 50%, #c19a6b 75%, transparent 75%, transparent)';
            });
            input.addEventListener('blur', function () {
                // Orijinal renk düzenine dönüyor
                document.body.style.backgroundImage = 'linear-gradient(135deg, #89c2d9 25%, transparent 25%, transparent 50%, #89c2d9 50%, #9370DB 75%, transparent 75%, transparent), linear-gradient(135deg, #c19a6b 25%, transparent 25%, transparent 50%, #c19a6b 50%, #89c2d9 75%, transparent 75%, transparent)';
            });
        });
    </script>
</body>
</html>

@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/User/GetPassword',
                method: 'GET',
                success: function (response) {
                    checkPassword(response);
                },
                error: function (error) {
                    console.log('Bir hata oluştu:', error);
                }
            });

            $.ajax({
                url: '/User/GetByEmail',
                method: 'GET',
                success: function (response) {
                    checkEmail(response);
                },
                error: function (error) {
                    console.log('Bir hata oluştu:', error);
                }
            });

            function checkEmail(data) {
                var inputEmail = $('#email').val();
                var ajaxEmail = data.email;  // Gelen JSON verisi içinde email
                if (inputEmail === ajaxEmail) {
                    console.log('Email eşit!');
                } else {
                    console.log('Email eşit değil!');
                }
            }

            function checkPassword(data) {
                var inputPassword = $('#password').val();
                var ajaxPassword = data.password;  // Gelen JSON verisi içinde password
                if (inputPassword === ajaxPassword) {
                    console.log('Şifre eşit!');
                } else {
                    console.log('Şifre eşit değil!');
                }
            }
        });

    </script>
}