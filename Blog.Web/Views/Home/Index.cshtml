@using Blog.Core.Models;
@model Blog.Web.Controllers.HomeController.HomeViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
}
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link rel="icon" href="path-to-your-heart-icon/favicon.ico" type="image/x-icon" />

<div id="main-content" class="blog-page">
    <div class="container">
        <div class="row clearfix">
            <div class="col-lg-8 col-md-12 left-box">
                @foreach (var post in Model.Posts)
                {
                    <div class="card single_post">
                        <div class="body">
                            <div class="img-post">
                                @if (post.ImagePath != null)
                                {
                                    <img class="d-block img-fluid" src="@post.ImagePath" alt="Post Image">
                                }
                                else
                                {
                                    <img class="d-block img-fluid" src="default-image-path.jpg" alt="Default Image">
                                }
                            </div>
                            <h3 class="post-title">
                                <a href="@Url.Action("Index", "PostDetail", new { postcat = post.Category, postSlug = post.Category.Slug, postId = post.Id })">@post.Title</a>
                            </h3>
                            <p class="post-summary">
                                @if (post.Summary.Length > 50)
                                {
                                    @post.Summary.Substring(0, 50)
                                }
                                else
                                {
                                    @post.Summary
                                }
                            </p>
                        </div>
                        <div class="footer">
                            <div class="actions">
                                <a id="okuDetay" href="/postDetail/@post.Category.Name/@post.Category.Slug/@post.Id" class="btn btn-outline-secondary">Oku</a>
                            </div>
                            <ul class="stats" style="margin-left:15px;padding-right:0px;margin-right:0px;">
                                <li><a href="javascript:void(0);" class="fa fa-heart">@post.Likes</a></li>
                                <li><a href="javascript:void(0);" class="fa fa-comment">@post.Comments</a></li>
                            </ul>
                        </div>
                    </div>
                }

                <ul class="pagination pagination-primary">
                    <li class="page-item"><a class="page-link" href="javascript:void(0);">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="javascript:void(0);">1</a></li>
                    <li class="page-item"><a class="page-link" href="javascript:void(0);">2</a></li>
                    <li class="page-item"><a class="page-link" href="javascript:void(0);">3</a></li>
                    <li class="page-item"><a class="page-link" href="javascript:void(0);">Next</a></li>
                </ul>
            </div>
            <div class="col-lg-4 col-md-12 right-box">
                <div class="card">
                    <div class="body search">
                        <div class="input-group m-b-0">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-search"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Search...">
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="header">
                        <h2>Kategoriler</h2>
                    </div>
                    <div class="body widget">
                        <ul class="list-unstyled categories-clouds m-b-0">
                            @foreach (var category in Model.Categories)
                            {
                                <li><a id="kategoriSec" href="javascript:void(0);">@category.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Css {
    <link rel="stylesheet" href="~/css/HomePage/Post/postIndexHomePage.css" asp-append-version="true" />
}

@section Scripts {
    <script>
        // JavaScript kodları buraya eklenebilir
    </script>
}
