@model Blog.Core.Models.Post

@{
    ViewData["Title"] = "Post Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="post-details">
                <!-- Başlık ve Tarih -->
                <h1 class="post-title text-center mb-3">@Model.Title</h1>
                <p class="text-muted text-center">
                    Published on @Model.DatePublished.ToString("MMMM dd, yyyy") <!-- Tarih formatını daha doğal yaptım -->
                </p>
                <!-- Görüntü varsa göster -->
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="post-image mt-4 text-center">
                        <img src="@Model.ImagePath" alt="Post Image" class="img-fluid" />
                    </div>
                }
                <!-- Özet kısmı gerekirse eklenir, şu anda eklemiyorum çünkü kısa içerik olmasın dedin -->
                <!-- İçerik kısmı -->
                <div class="post-content mt-4">
                    <p>@Html.Raw(Model.Content)</p>
                </div>

             

                <!-- Geri butonu -->
                <div class="text-center mt-5">
                    <a href="@Url.Action("Index", "Post")" class="btn btn-primary">Back to Blog</a>
                </div>
            </div>
        </div>
    </div>
</div>

