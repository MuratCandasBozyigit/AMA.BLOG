            $('#modal').modal('show');
        });

        // Kategori düzenleme işlemi
        $('#tblCategories').on('click', '.editTitle', function () {
            var id = $(this).data('id');
            $.ajax({
                url: "Categories/GetById/" + id,
                success: function (res) {
                    $('#title').val(res.name);

                    $('#modalTitle').text('Kategori Düzenle');
                    $('#btnSave').text('Güncelle');
                    $('#modal').modal('show');
                },
                error: function () {
                    Swal.fire('Hata', 'Kategori verisi yüklenirken bir sorun oluştu.', 'error');
                }
            });
        });

        // Kategori silme işlemi
        $('#tblCategories').on('click', '.deleteTitle', function () {
            var id = $(this).data('id');
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu başlık kalıcı olarak silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet, sil!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "DELETE",
                        url: "Categories/Delete/" + id,
                        success: function () {
                            table.ajax.reload();
                            Swal.fire('Silindi!', 'Kategori başarıyla silindi.', 'success');
                        },
                        error: function () {
                            Swal.fire('Hata', 'Kategori silinirken bir sorun oluştu.', 'error');
